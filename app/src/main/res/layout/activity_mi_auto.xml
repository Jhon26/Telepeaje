<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.telepeaje.MiAutoActivity">


    <TextView
        android:id="@+id/propietarioMiAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Propietario: Pedro Perez"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/documentoPropietarioMiAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Documento: C.C. 1522444154"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/placaMiAuto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Placa: "
        android:textAlignment="center" />

    <Button
        android:id="@+id/pagoMiAuto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/placaMiAuto"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:onClick="openSeleccionarPago"/>

    <Button
        android:id="@+id/peajesMiAuto"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:textColor="@android:color/white"
        android:layout_below="@+id/pagoMiAuto"
        android:layout_alignLeft="@+id/pagoMiAuto"
        android:layout_alignStart="@+id/pagoMiAuto"
        android:onClick="openSeleccionarPeajes"/>

</RelativeLayout>
